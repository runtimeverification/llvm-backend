#!/bin/bash
set -e

if [ $# -lt 2 ]; then
  echo "Usage: $0 <definition.kore> [main|search|static|python] <clang flags>"
  echo "See llvm-kompilex -h for help"
  exit 1
fi
dt_dir="$(mktemp -d)"
trap 'rm -rf "$dt_dir"' INT TERM EXIT
definition="$1"
main="$2"
shift; shift
( cd "@PROJECT_SOURCE_DIR@"/matching && mvn exec:java -Dexec.args="$definition qbaL $dt_dir 1" -q )
llvm-kompilex "$definition" "$dt_dir" "$main" -- "$@" -g
