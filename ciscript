#!/bin/bash -ex
export PATH=$PATH:~/.cargo/bin
mkdir -p build
cd build
CC=clang CXX=clang++ cmake .. -DCMAKE_BUILD_TYPE=Debug
make -j`nproc`
make run-unittests
cd ../runtime/datastructures
cargo test
cargo build --release
cd ../../matching
stack test
stack install
cd ../build
./tools/test_rhs/test_rhs ../test/test.kore | diff - ../test/test.ll
./tools/test_rhs/test_rhs ../test/imp.kore | diff - ../test/imp.ll
./tools/test_sideconditions/test_sideconditions ../test/imp.kore | diff - ../test/requires.ll

./tools/test_configparser/test_configparser ../test/imp.kore > configparser.ll
diff configparser.ll ../test/configparser.ll
RUSTDIR=`rustc --print sysroot`/lib/rustlib/x86_64-unknown-linux-gnu/lib/
export PATH=$PATH:~/.local/bin
../bin/llvm-kompile ../test/imp.kore IMP -o interpreter
./interpreter ../test/collatz.kore -1 | grep -q "Lbl'-LT-'T'-GT-'{}(Lbl'-LT-'k'-GT-'{}(dotk{}())"
../bin/llvm-kompile ../test/test2.kore TEST -o interpreter
./interpreter ../test/test2.kore -1 | grep -q "Lbl'-LT-'k'-GT-'{}(kseq{}(inj{SortDone{}, SortKItem{}}(Lbldone'Unds'TEST'Unds'{}()),dotk{}()))"
../bin/llvm-kompile ../test/test3.kore TEST -o interpreter
./interpreter ../test/test3.kore -1 | grep -q "Lbl'-LT-'k'-GT-'{}(kseq{}(inj{SortDone{}, SortKItem{}}(Lbldone'Unds'TEST'Unds'{}()),dotk{}()))"
../bin/llvm-kompile ../test/test4.kore TEST -o interpreter
./interpreter ../test/test4.kore -1 | diff - ../test/test4.out
../bin/llvm-kompile ../test/test5.kore TEST -o interpreter
./interpreter ../test/test5.kore -1 | diff - ../test/test5.out
../bin/llvm-kompile ../test/test6.kore TEST -o interpreter
./interpreter ../test/test6.kore -1 | diff - ../test/test6.out
rm -f configparser configparser.ll interpreterQ
